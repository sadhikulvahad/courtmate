{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "types": [
    "node"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}